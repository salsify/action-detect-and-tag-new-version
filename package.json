{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build",
    "test": "jest",
    "all": "yarn build && yarn format && yarn lint && yarn package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Dan Freeman",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "execa": "^4.0.0",
    "glob": "^7.1.6"
  },
  "devDependencies": {
    "@dfreeman/eslint-config": "^2.0.0",
    "@types/execa": "^2.0.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^16.0.0",
    "@typescript-eslint/parser": "^2.8.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^6.8.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^4.6.3"
  }
}
